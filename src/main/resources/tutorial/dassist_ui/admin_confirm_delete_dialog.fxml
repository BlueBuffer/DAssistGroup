<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="280.0" prefWidth="450.0"
            style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-radius: 10;
                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 20, 0, 0, 5);"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tutorial.dassist_ui.AdminConfirmDeleteDialogController">

    <children>
        <Button fx:id="yesButton" layoutX="105.0" layoutY="200.0"
                prefHeight="31.0" prefWidth="91.0"
                style="-fx-background-color: D03B30;"
                text="Yes" textFill="WHITE"
                onAction="#onYes" />

        <Button fx:id="noButton" layoutX="256.0" layoutY="200.0"
                prefHeight="31.0" prefWidth="91.0"
                style="-fx-background-color: AEA6A6;"
                text="No" textFill="WHITE"
                onAction="#onNo" />

        <Label fx:id="messageLabel" layoutX="60.0" layoutY="84.0"
               style="-fx-font-size: 16px; -fx-text-fill: #333;"
               text="Are you sure you want to delete this file?">
            <font>
                <Font name="Arial Rounded MT Bold" size="12.0"/>
            </font>
        </Label>

        <Button fx:id="closeButton" layoutX="397.0" layoutY="14.0"
                prefHeight="23.0" prefWidth="43.0"
                style="-fx-background-color: transparent; -fx-padding: 0;"
                text="X"
                onAction="#onNo" />
    </children>
</AnchorPane>
