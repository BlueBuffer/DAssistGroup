<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane style="-fx-background-color: #f4f5f7;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tutorial.dassist_ui.ProfileController">

    <!-- Center container -->
    <StackPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <!-- Card -->
        <VBox alignment="TOP_CENTER" prefHeight="420" prefWidth="720" spacing="22" style="-fx-background-color: #d3d3d3; -fx-background-radius: 24; -fx-border-radius: 24; -fx-border-color: white;">

            <effect>
                <DropShadow color="#1A000000" offsetY="6" radius="18" />
            </effect>

            <padding>
                <Insets bottom="28" left="34" right="34" top="28" />
            </padding>

            <!-- Header -->
            <VBox alignment="CENTER_LEFT" prefWidth="650" spacing="6">
                <Label style="-fx-text-fill: #111827;" text="Profile Settings">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="22" />
                    </font>
                </Label>
                <Label style="-fx-text-fill: #6b7280; -fx-font-size: 13;" text="View and update your account details" />
            </VBox>

            <!-- Form grid -->
            <GridPane hgap="14" prefWidth="650" vgap="16">

                <!-- NAME -->
                <Label style="-fx-text-fill: #374151; -fx-font-size: 13;" text="Name" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="nameField" disable="true" prefWidth="420" style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-background-radius: 12; -fx-border-radius: 12; -fx-padding: 10 12;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Button onAction="#editName" style="-fx-background-color: #ffffff; -fx-border-color: #d1d5db; -fx-background-radius: 10; -fx-border-radius: 10; -fx-padding: 8 14; -fx-text-fill: #111827; -fx-font-size: 12;" text="Edit" GridPane.columnIndex="2" GridPane.rowIndex="0" />

                <!-- EMAIL -->
                <Label style="-fx-text-fill: #374151; -fx-font-size: 13;" text="Email" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="emailField" disable="true" prefWidth="420" style="-fx-background-color: #f9fafb; -fx-border-color: #e5e7eb; -fx-background-radius: 12; -fx-border-radius: 12; -fx-padding: 10 12;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Button onAction="#editEmail" style="-fx-background-color: #ffffff; -fx-border-color: #d1d5db; -fx-background-radius: 10; -fx-border-radius: 10; -fx-padding: 8 14; -fx-text-fill: #111827; -fx-font-size: 12;" text="Edit" GridPane.columnIndex="2" GridPane.rowIndex="1" />

                <!-- PASSWORD -->
                <Label style="-fx-text-fill: #374151; -fx-font-size: 13;" text="Password" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <PasswordField fx:id="passwordField" disable="true" prefWidth="420" promptText="••••••••" style="-fx-background-color: #f9fafb; -fx-border-color: #e5e7eb; -fx-background-radius: 12; -fx-border-radius: 12; -fx-padding: 10 12;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Button onAction="#editPassword" style="-fx-background-color: #ffffff; -fx-border-color: #d1d5db; -fx-background-radius: 10; -fx-border-radius: 10; -fx-padding: 8 14; -fx-text-fill: #111827; -fx-font-size: 12;" text="Edit" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <columnConstraints>
               <ColumnConstraints />
               <ColumnConstraints />
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>

            <!-- Message -->
            <Label fx:id="messageLabel" maxWidth="650" style="-fx-text-fill: #ef4444; -fx-font-size: 12;" wrapText="true" />

            <!-- Footer buttons -->
            <HBox alignment="CENTER_RIGHT" prefWidth="650" spacing="12">
                <Button onAction="#handleLogout" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 10 18; -fx-text-fill: black; -fx-font-size: 13;" text="Log out" />
            </HBox>

        </VBox>
    </StackPane>

</AnchorPane>
