        <VBox prefHeight="600" prefWidth="240" spacing="25" style="-fx-background-color: EFE1DD;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0">

            <children>

                <!-- Branding：Logo + App Name + Slogan -->
                <VBox alignment="CENTER_LEFT" spacing="8" style="-fx-background-color: EFE1DD;">
                    <padding>
                        <Insets bottom="0" left="20" right="20" top="30" />
                    </padding>

                    <children>
                        <AnchorPane>
                            <children>

                                <!-- LOGO -->
                                <ImageView fitHeight="46.0" fitWidth="43.0" layoutY="-7.0" preserveRatio="true">
                                    <image>
                                        <Image url="@images/logo.png" />
                                    </image>
                                </ImageView>



                                <!-- App 名称 -->
                                <Label layoutX="67.0" layoutY="-6.0" style="-fx-font-size: 22px; -fx-text-fill: black;" text="D-Assist">
                                    <font>
                                        <Font name="Arial Rounded MT Bold" size="12.0" />
                                    </font>
                                </Label>

                                <!-- Slogan -->
                                <Label layoutX="54.0" layoutY="21.0" style="-fx-font-size: 12px; -fx-text-fill: black; -fx-font-weight: 100;" text="Your AI Diabetes Assistant">
                                    <font>
                                        <Font name="Arial Rounded MT Bold" size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </AnchorPane>

                    </children>
                </VBox>

                <!-- 菜单 button 区域 -->
                <VBox spacing="15" style="-fx-background-color: EFE1DD;">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>

                    <children>
                        <ButtonBar prefHeight="18.0" prefWidth="88.0" style="-fx-background-color: EFE1DD;" />
                        <AnchorPane prefHeight="33.0" prefWidth="151.0">
                            <children>

                                <!-- Upload = Active -->
                                <Button layoutX="17.0" layoutY="-3.0" prefHeight="37.0" prefWidth="186.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 8,0,0,2); -fx-font-size: 14px; -fx-text-fill: black;" text="    Upload" textAlignment="CENTER">
                                    <font>
                                        <Font name="Arial Rounded MT Bold" size="12.0" />
                                    </font>
                                </Button>
                                <ImageView fitHeight="26.0" fitWidth="18.0" layoutX="71.0" layoutY="7.0" preserveRatio="true">
                                    <image>
                                        <Image url="@images/upload_icon.png" />
                                    </image>
                                    <effect>
                                        <ColorAdjust brightness="-0.11" />
                                    </effect>
                                </ImageView>
                            </children>
                        </AnchorPane>
                        <AnchorPane>
                            <children>

                                <Button layoutX="53.0" layoutY="-2.0" prefWidth="160" style="-fx-background-color: transparent; -fx-text-fill: black; -fx-font-size: 14px;" text="Notification" textAlignment="RIGHT">
                                    <font>
                                        <Font name="Arial Rounded MT Bold" size="12.0" />
                                    </font>
                                </Button>

                                <ImageView fitHeight="18.0" fitWidth="18.0" layoutX="70.0" layoutY="4.0" preserveRatio="true">
                                    <image>
                                        <Image url="@images/notifications.png" />
                                    </image>
                                </ImageView>
                            </children>
                        </AnchorPane>
                        <AnchorPane>
                            <children>

                                <Button layoutX="69.0" layoutY="-9.0" prefHeight="37.0" prefWidth="81.0" style="-fx-background-color: transparent; -fx-text-fill: black; -fx-font-size: 14px;" text="FAQ">
                                    <font>
                                        <Font name="Arial Rounded MT Bold" size="12.0" />
                                    </font>
                                </Button>

                                <!-- FAQ -->
                                <ImageView fitHeight="15.0" fitWidth="17.0" layoutX="72.0" layoutY="3.0" preserveRatio="true">
                                    <image>
                                        <Image url="@images/FAQ_icon.png" />
                                    </image>
                                </ImageView>
                            </children>
                        </AnchorPane>

                    </children>
                </VBox>

                <!-- 占位撑开 -->
                <Pane style="-fx-background-color: EFE1DD;" VBox.vgrow="ALWAYS">
                    <children>

                        <Button layoutX="71.0" layoutY="405.0" prefHeight="27.0" prefWidth="112.0" style="-fx-background-color: white; -fx-background-radius: 0; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 6,0,0,1); -fx-font-size: 14px;" text=" Log out" textAlignment="CENTER">
                            <graphic>


                                <ImageView fitHeight="14.0" fitWidth="17.0" preserveRatio="true">
                                    <image>
                                        <Image url="@images/log_out_icon.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                </Pane>
                <AnchorPane style="-fx-background-color: EFE1DD;">
                    <children>

                        <!-- Footer：Logout -->
                        <VBox alignment="CENTER_LEFT">
                            <padding>
                                <Insets bottom="20" left="20" right="20" top="20" />
                            </padding>
                        </VBox>

                        <Label layoutX="72.0" layoutY="-12.0" style="-fx-font-size: 11px;" text="© 2025 D-Assist" textFill="#a19d9d">
                            <padding>
                                <Insets bottom="10" left="10" right="10" top="10" />
                            </padding>
                        </Label>
                    </children>
                </AnchorPane>

            </children>
        </VBox>
        <AnchorPane layoutX="345.0" layoutY="41.0">
            <children>


                <!-- 右侧主内容区 -->
                <VBox spacing="18">

                    <children>
                        <AnchorPane />

                    </children>

                </VBox>
            </children>
        </AnchorPane>

        <!-- 主标题 -->
        <Label layoutX="301.0" layoutY="37.0" style="-fx-font-size: 26px; -fx-text-fill: #333;" text="Upload" />

        <!-- Drag & Drop 区域 -->
        <AnchorPane fx:id="dropArea" layoutX="473.0" layoutY="143.0" prefHeight="306.0" prefWidth="575.0" style="-fx-border-color: #cccccc; -fx-border-width: 2; -fx-border-style: segments(10, 10); -fx-border-radius: 15; -fx-background-radius: 15; -fx-background-color: f5f5f5;">

            <children>
                <AnchorPane layoutX="128.0" layoutY="114.0" style="-fx-background-color: f5f5f5;">
                    <children>

                        <VBox alignment="CENTER" spacing="10">

