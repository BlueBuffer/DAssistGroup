                                <AnchorPane />

                            </children>

                        </VBox>
                    </children>
                </AnchorPane>

                <Label layoutX="122.0" layoutY="94.0" style="-fx-font-size: 16px; -fx-text-fill: #333;" text="Click to browse or drag and drop your files" />

                <Label layoutX="165.0" layoutY="131.0" style="-fx-text-fill: #888; -fx-font-size: 12px;" text="Accepts PDF, DOCX, or TXT formats of file">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="12.0" />
                    </font>
                </Label>

            </children>

        </AnchorPane>

        <!-- 副标题 -->
        <Label layoutX="304.0" layoutY="71.0" style="-fx-text-fill: #777; -fx-font-size: 14px;" text="Upload files type of data you want to upload">
            <font>
                <Font name="Arial Rounded MT Bold" size="12.0" />
            </font>
        </Label>



    </children>
</AnchorPane>
